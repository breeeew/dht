{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "sourceMap": false,
        "outDir": "dist",
        "downlevelIteration": true,
        "target": "ESNext",
        "lib": ["ESNext"],
        "types": [
            "node"
        ],
        "typeRoots": ["src", "node_modules/@types"],
        "baseUrl": "./"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
