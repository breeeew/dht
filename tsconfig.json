{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "sourceMap": false,
        "outDir": "dist",
        "downlevelIteration": true,
        "lib": ["ESNext"],
        "types": [
            "kademlia",
            "node"
        ],
        "typeRoots": ["src", "node_modules/@types"],
        "baseUrl": "./",
        "paths": {
            "kademlia": ["src/kademlia.ts"]
        }
    },
    "include": [
        "src/**/*",
        "src/kademlia.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
